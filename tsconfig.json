{
	"include": [
		"src"
	],
	"exclude": [
        "node_modules"
	],
	"compilerOptions": {
		"target": "esnext",
		"module": "NodeNext",
		"rootDir": "src",
		"outDir": "build",
		"esModuleInterop": true,
		"moduleResolution": "NodeNext",
		"pretty": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true
	}

}

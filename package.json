{
	"name": "@marianmeres/jay",
	"version": "1.0.0",
	"description": "The naive, the json, the CMS",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"type": "module",
	"scripts": {
		"clean": "rimraf build/*",
		"build": "npm run clean && tsc",
		"dev": "npm run clean && mkdirp build && tsc -w & nodemon --delay 1 -q -w build build/",
		"start": "npm run build && env-cmd node build/",
		"test": "env-cmd -- node --loader ts-node/esm tests/index.ts",
		"test:watch": "nodemon --delay 0.5 -q -w \"src/**/*.*\" -w \"tests/**/*.*\" -x \"node --loader ts-node/esm tests/index.ts\" --",
		"prettier": "prettier --write \"src/**/*.{js,ts,json}\"",
		"pswhash": "node password-hash.cjs"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/marianmeres/jay.git"
	},
	"keywords": [
		"json",
		"cms"
	],
	"author": "Marian Meres <marian@meres.sk>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/marianmeres/jay/issues"
	},
	"homepage": "https://github.com/marianmeres/jay#readme",
	"dependencies": {
		"@lukeed/uuid": "^2.0.0",
		"@marianmeres/clog": "^1.0.1",
		"@marianmeres/parse-boolean": "^1.1.7",
		"ajv": "^8.12.0",
		"bcrypt": "^5.0.0",
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cookie-session": "^1.4.0",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^15.0.0",
		"env-cmd": "^10.1.0",
		"express": "^4.17.1",
		"form-data": "^4.0.0",
		"formidable": "^3.5.1",
		"httpie": "^1.1.2",
		"js-yaml": "^4.1.0",
		"kleur": "^4.1.3",
		"lodash": "^4.17.20",
		"lru-cache": "^10.2.1",
		"sharp": "^0.33.3",
		"slugify": "^1.6.0",
		"tinydate": "^1.3.0",
		"totalist": "^2.0.0",
		"uid": "^2.0.0",
		"yup": "^0.31.1"
	},

		"@types/lodash": "^4.14.166",
		"@types/lru-cache": "^5.1.0",
		"@types/node": "^14.14.17",
		"@types/rimraf": "^3.0.0",
		"@types/sharp": "^0.29",
		"nodemon": "^3.1.0",
		"prettier": "^3.2.5",
		"rimraf": "^3.0.2",
